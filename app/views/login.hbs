<div class="uk-section uk-padding-remove-vertical uk-grid">
   {{> nav-bar-left }}
   {{> welcome-nav }}
</div>
<div class="uk-container uk-margin">
   <div class="uk-child-width-expand uk-flex-center uk-flex-middle uk-text-center" uk-grid>
      <div>
         <div class="uk-card uk-card-default uk-card-body uk-box-shadow-large">
            <h3 class="uk-card-title uk-text-center">Welcome back!</h3>
            <form action="/login" method="POST">
               <div class="uk-margin uk-text-left">
                  <label class="uk-form-label" form="form-stacked-text">Email</label>
                  <div class="uk-inline uk-width-1-1">
                     <span class="uk-form-icon" uk-icon="icon: mail"></span>
                     <input class="uk-input uk-form-large" type="text" placeholder="email" name="email">
                  </div>
               </div>
               <div class="uk-margin">
                  <div class="uk-inline uk-width-1-1">
                     <span class="uk-form-icon" uk-icon="icon: lock"></span>
                     <input class="uk-input uk-form-large" type="password" placeholder="password" name="password">
                  </div>
               </div>
               <div class="uk-margin">
                  <button class="uk-button uk-button-primary uk-border-rounded uk-button-large uk-width-1-1">Login</button>
               </div>
               <div class="uk-text-left uk-text-small">
               </div>
            </form>
            {{> error }}
         </div>
      </div>
      <div>
         <img width="300" src="images/pexels-photo-2350368.jpeg">
      </div>
   </div>
</div>
