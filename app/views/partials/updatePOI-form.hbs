<form class="uk-form-stacked uk-text-left uk-margin-uk-card uk-card-default uk-card-body"
      action="{{indivInterests._id}}" method="POST">
   <fieldset class="uk-fieldset">

      <legend class="uk-legend"> <i class="far fa-compass fa-1x" style="color:rgb(241,113,4)"></i>
         Edit Point of Interest
      </legend>

      <div class="uk-form-label">Select Category</div>
      <div class="uk-form-controls">
         <select name="category" class="uk-select" value="{{indivInterests.categories}}">
            {{#each categories}}
               <option value={{region}}>{{region}}</option>
            {{/each}}
         </select>
      </div>

      <div class="uk-margin">
         <input class="uk-input" type="text" placeholder="Enter castle name here" name="poi" value="{{indivInterests.poi}}">
      </div>

      <div class="uk-margin">
         <input class="uk-input" type="text" placeholder="Description" name="description"{{indivInterests.description}}>
      </div>

      <div class="uk-margin">
         <input class="uk-input" type="text" placeholder="Enter location here" name="location" {{indivInterests.location}}>
      </div>

   </fieldset>

   <div class="uk-width-1-2@m">
      <button class="uk-button uk-button-primary uk-button-medium  uk-border-rounded uk-width-1-3">update</button>
   </div>
   {{> error }}
</form>
