<form action="/settings" method="POST">
   <div class="uk-margin">
      <div class="uk-inline uk-width-1-1">
         <span class="uk-form-icon" uk-icon="icon: user"></span>
         <input class="uk-input uk-form-large" type="text" name="firstName" value="{{user.firstName}}">
      </div>
   </div>
   <div class="uk-margin">
      <div class="uk-inline uk-width-1-1">
         <span class="uk-form-icon" uk-icon="icon: user"></span>
         <input class="uk-input uk-form-large" type="text" name="lastName" value="{{user.lastName}}">
      </div>
   </div>
   <div class="uk-margin">
      <div class="uk-inline uk-width-1-1">
         <span class="uk-form-icon" uk-icon="icon: mail"></span>
         <input class="uk-input uk-form-large" type="text" name="email" value="{{user.email}}">
      </div>
   </div>
   <div class="uk-margin">
      <div class="uk-inline uk-width-1-1">
         <span class="uk-form-icon" uk-icon="icon: lock"></span>
         <input class="uk-input uk-form-large" type="password" name="password" value="{{user.password}}">
      </div>
   </div>
   <div class="uk-margin">
      <button class="uk-button uk-button-primary uk-border-rounded  uk-button-large uk-width-1-1">Save </button>
   </div>
</form>
{{> error }}

<form action="/profileinfo" method="POST">
   <fieldset class="uk-fieldset">

      <legend class="uk-legend">Share your interests</legend>

      <div class="uk-margin">
         <textarea class="uk-textarea" rows="5" placeholder="Update profile Bio"></textarea>
      </div>
      <div class="uk-margin">
         <a title="Update" name="profile" class="fas fa-save fa-3x" style="color:rgb(3,68,165)"></a>
      </div>

   </fieldset>
</form>